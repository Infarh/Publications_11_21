@model IEnumerable<AuthorViewModel>
@{
    ViewBag.Title = "Авторы";
}

<table class="table">
    <thead>
    <tr>
        <th>id</th>
        <th>Фамилия</th>
        <th>Имя</th>
        <th>Отчество</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var author in Model)
    {
        <tr>
            <td>@author.Id</td>
            <td>@author.LastName</td>
            <td>@author.Name</td>
            <td>@author.Patronymic</td>
            <td>
                <a asp-action="Edit" asp-route-Id="@author.Id">
                    <i class="fa fa-edit"></i>ред.
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>